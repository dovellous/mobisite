<?xml version='1.0' encoding='utf-8'?>
<widget id="com.inboxcorporation.supplyzone" version="2.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SupplyZone</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


    <icon src="ic_launcher.png" />

    <platform name="android">
        <splash src="res/images/splashscreen.png" density="land-hdpi" />
        <splash src="res/images/splashscreen.png" density="land-ldpi" />
        <splash src="res/images/splashscreen.png" density="land-mdpi" />
        <splash src="res/images/splashscreen.png" density="land-xhdpi" />
        <splash src="res/images/splashscreen.png" density="land-xxhdpi" />
        <splash src="res/images/splashscreen.png" density="land-xxxhdpi" />

        <splash src="res/images/splashscreen.png" density="port-hdpi" />
        <splash src="res/images/splashscreen.png" density="port-ldpi" />
        <splash src="res/images/splashscreen.png" density="port-mdpi" />
        <splash src="res/images/splashscreen.png" density="port-xhdpi" />
        <splash src="res/images/splashscreen.png" density="port-xxhdpi" />
        <splash src="res/images/splashscreen.png" density="port-xxxhdpi" />


    </platform>

    <preference name="AndroidXEnabled" value="true" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1250"/>
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="white" />

    <preference name="SplashScreenDelay" value="7000" />


</widget>
